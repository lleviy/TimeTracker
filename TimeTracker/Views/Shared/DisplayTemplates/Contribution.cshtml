@model TimeTracker.Models.Contribution
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="Id" />
<input type="hidden" asp-for="ContributionConfirmed" />
<div class="form-group">
    @Html.LabelFor(m => m.ContributorEmail):
    @Model.ContributorEmail
</div>
<div class="form-group">
    <table>
        <tr>
            <td>@Html.CheckBoxFor(m => m.ContributionConfirmed, new { @onclick = "return false" })</td>
            <td>@Html.LabelFor(m => m.ContributionConfirmed)</td>
        </tr>
    </table>
</div>

