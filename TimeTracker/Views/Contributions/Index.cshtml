@model IEnumerable<TimeTracker.Models.Contribution>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContributionConfirmed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContributionConfirmed)
            </td>
            <td>
                @Html.ActionLink("Reject", "Reject", new {userId = @item.UserId, projectId = @item.ProjectId})
            </td>
        </tr>
}
    </tbody>
</table>
