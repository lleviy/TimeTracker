@model TimeTracker.Models.Task

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Task</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaskType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Workings)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.Workings)
            {
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.StartTime) -
                    @Html.DisplayFor(model => item.EndTime)
                    @Html.DisplayFor(model => item.Changes)
                </dd>
             }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
